pkgname=playpalace-server
pkgver=0.0.0
pkgrel=1
pkgdesc="PlayPalace multiplayer server"
arch=('x86_64')
url="https://github.com/XGDevGroup/PlayPalace11"
license=('custom')
depends=('systemd')
source=("PlayPalaceServer.tar.gz" "playpalace-server.service")
sha256sums=('SKIP' 'SKIP')

package() {
  install -d "$pkgdir/opt/playpalace/server"
  cp -a PlayPalaceServer/* "$pkgdir/opt/playpalace/server/"
  install -Dm644 playpalace-server.service "$pkgdir/usr/lib/systemd/system/playpalace-server.service"
  install -Dm644 PlayPalaceServer/LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
