midnight-category = ألعاب النرد

# Actions
midnight-roll = ارمِ النرد
midnight-keep-die = احتفظ بـ { $value }
midnight-bank = ادخر

# Game events
midnight-turn-start = دور { $player }.
midnight-you-rolled = رميت: { $dice }.
midnight-player-rolled = { $player } رمى: { $dice }.

# Keeping dice
