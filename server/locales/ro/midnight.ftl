# Game info
game-name-midnight = 1-4-24
midnight-category = Jocuri cu Zaruri

# Actions
midnight-roll = Aruncați zarurile
midnight-keep-die = Păstrați { $value }
midnight-bank = Confirmați

# Game events
midnight-turn-start = Rândul lui { $player }.
midnight-you-rolled = Ați aruncat: { $dice }.
midnight-player-rolled = { $player } a aruncat: { $dice }.

# Keeping dice
midnight-you-keep = Păstrați { $die }.
midnight-player-keeps = { $player } păstrează { $die }.
midnight-you-unkeep = Eliberați { $die }.
midnight-player-unkeeps = { $player } eliberează { $die }.

