# Messages du jeu 1-4-24 (Midnight)

# Informations sur le jeu
game-name-midnight = 1-4-24
midnight-category = Jeux de dés

# Actions
midnight-roll = Lancer les dés
midnight-keep-die = Garder { $value }
midnight-bank = Banquer

# Événements de jeu
midnight-turn-start = Tour de { $player }.
midnight-you-rolled = Vous avez lancé : { $dice }.
midnight-player-rolled = { $player } a lancé : { $dice }.

# Garder les dés
midnight-you-keep = Vous gardez { $die }.
midnight-player-keeps = { $player } garde { $die }.
midnight-you-unkeep = Vous relâchez { $die }.
midnight-player-unkeeps = { $player } relâche { $die }.

# Statut du tour
midnight-you-have-kept = Dés gardés : { $kept }. Lancers restants : { $remaining }.
midnight-player-has-kept = { $player } a gardé : { $kept }. { $remaining } dés restants.

# Score
midnight-you-scored = Vous avez marqué { $score } points.
midnight-scored = { $player } a marqué { $score } points.
midnight-you-disqualified = Vous n'avez pas à la fois 1 et 4. Disqualifié !
midnight-player-disqualified = { $player } n'a pas à la fois 1 et 4. Disqualifié !

# Résultats de manche
midnight-round-winner = { $player } remporte la manche !
midnight-round-tie = Manche à égalité entre { $players }.
midnight-all-disqualified = Tous les joueurs disqualifiés ! Aucun gagnant cette manche.

# Gagnant du jeu
midnight-game-winner = { $player } remporte le jeu avec { $wins } victoires de manche !
midnight-game-tie = Égalité ! { $players } ont chacun remporté { $wins } manches.

# Options
midnight-set-rounds = Manches à jouer : { $rounds }
midnight-enter-rounds = Entrez le nombre de manches à jouer :
midnight-option-changed-rounds = Manches à jouer changées à { $rounds }

# Raisons désactivées
midnight-need-to-roll = Vous devez d'abord lancer les dés.
midnight-no-dice-to-keep = Aucun dé disponible à garder.
midnight-must-keep-one = Vous devez garder au moins un dé par lancer.
midnight-must-roll-first = Vous devez d'abord lancer les dés.
midnight-keep-all-first = Vous devez garder tous les dés avant de banquer.
