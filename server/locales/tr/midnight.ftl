game-name-midnight = 1-4-24
midnight-category = Zar Oyunları

# Eylemler
midnight-roll = Zarları at
midnight-keep-die = { $value }'ı tut
midnight-bank = Bankaya yatır

# Oyun olayları
midnight-turn-start = { $player }'ın turu.
midnight-you-rolled = Attığın: { $dice }.
midnight-player-rolled = { $player } attı: { $dice }.

# Zarları tutma
midnight-you-keep = { $die }'ı tutuyorsun.
midnight-player-keeps = { $player } { $die }'ı tutuyor.
midnight-you-unkeep = { $die }'ı bırakıyorsun.
midnight-player-unkeeps = { $player } { $die }'ı bırakıyor.

